@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
    var rootContent = Umbraco.ContentAtRoot();
    var siteSettings = rootContent.OfType<SiteSettings>().FirstOrDefault();

    var siteName = siteSettings?.SiteName;
    var title = Model.Level == 1 ? $"{siteName}" : $"{siteName} | {Model.Name}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="google-site-verification" content="tCzjFQOO1CGYCU0r_BhilmLJ9qc0Q8wi4bqwvTlVBVg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@12/swiper-bundle.min.css" />
    <link href="~/css/styles.css" rel="stylesheet">
</head>
<body>
	<partial name="Partials/Layout/_Topbar.cshtml" />
    <partial name="Partials/Layout/_Header.cshtml" />
    @RenderBody()
	<partial name="Partials/Layout/_Footer.cshtml" />


    <script src="https://cdn.jsdelivr.net/npm/swiper@12/swiper-bundle.min.js"></script>
	<script src="~/js/swiper.js"></script>
    <script src="~/js/form.js"></script>
</body>
</html>