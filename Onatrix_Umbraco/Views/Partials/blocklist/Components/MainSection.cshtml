@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Onatrix_Umbraco.ViewModels
@{
    var content = (ContentModels.MainSection)Model.Content;
    var settings = Model.Settings as ContentModels.MainSettings;
}

<section id="main">
    <div class="container">

        <div class="main-content">
            <p class="page-title">@content.MainLabel</p>
            <div>@content.MainTitle</div>
            <div class="rte">
				@Html.Raw(content.MainText)
            </div>
        </div>

        <div class="main-form">
            <div>
                <h2 class="form-title">@content.CallbackFormTitle</h2>
            </div>
            <p class="form-info">@content.CallbackFormDescription</p>

            <partial name="Partials/Forms/_CallbackForm" model="new CallbackFormViewModel()" />

        </div>

    </div>
</section>
