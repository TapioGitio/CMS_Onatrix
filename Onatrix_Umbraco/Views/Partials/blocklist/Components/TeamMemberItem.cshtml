@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.TeamMemberItem)Model.Content;
}

<div class="team-box">
    @if (content.TeamMemberImage != null)
    {
        <img src="@content.TeamMemberImage.Url()" alt="@content.TeamMemberName" />
    }
    <div class="team-text">
        <h5>@content.TeamMemberName</h5>
        <p>@content.TeamMemberRole</p>
    </div>
</div>

